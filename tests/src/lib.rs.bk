#![feature(proc_macro)]
extern crate mock_derive;

use mock_derive::mock;

#[allow(dead_code)]
struct Foo {
    x: i32,
    y: i32,
}

#[allow(dead_code)]
impl Foo {
    pub fn new() -> Foo {
        Foo { x: 0, y: 0 }
    }
}

trait HelloWorld {
    fn hello_world(&self);
    fn foo(&self) -> u32;
    fn bar(&self) -> Option<u32>;
    fn baz(&self, x: i32) -> Foo;
}

#[mock]
impl HelloWorld for Foo {
    fn hello_world(&self) {
        println!("Hello World!");
    }

    fn foo(&self) -> u32 {
        1
    }

    fn bar(&self) -> Option<u32> {
        Some(12)
    }

    fn baz(&self, x: i32) -> Foo {
        Foo { x: x, y: x }
    }
}

